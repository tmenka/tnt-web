<html>
    <head>
        <%- include('../partials/head'); %>
        <link rel="stylesheet" href="/styles/users.css">
        <title> Tnt Web </title>
    <!-- <link href="/styles.css" rel="stylesheet"> -->
    </head>
    <body>
    <div class="layout">  
    <!--HEARDER DODAVANJE-->
        <header><%- include('../partials/header-employee',  { errorMessage: errorMessage }, { isAdmin: isAdmin }); %></header>

        <div class="content">
            <p class="naslov-1"> GALERIJA </p>
            <form action ="/admin/gallery" method="POST" enctype="multipart/form-data" style=" margin-top: 10px; margin-bottom: 10px;">
                <input type="text" name="title" placeholder="Naziv slike" required> 
                <input type="file" name="image" placeholder="Dodaj sliku" required>        
                
                <button class="btn-rez"> Dodaj sliku </button>
            </form>

            <div style="display: grid; grid-template-columns: auto auto auto; margin-top: 20px;">
                <% for( var i = 0; i < gallery_items.length; i++){ %>
                    <div>
                    <span>
                        <%= gallery_items[i].title %>
                    </span>
                    <img style="width: 500px; height: 300px; margin-right: 5px;" alt="gallery image" src="<%= gallery_items[i].path %>"/>

                    <form action ="/admin/gallery/delete" method="POST">
                        <input type="hidden" type="number" name="image_id" value="<%= gallery_items[i].gallery_items_id %>">
                       <button class="btn-rmv" style="margin-top: 10px;"> Delete </button>
                    </form>
                </div>
                <% } %>
            </div>
          
        </div>
    <!--FOOTER DODAVANJE-->
        <div> <footer><%- include('../partials/footer'); %></footer>
        </div>
    </div>
</body>
</html>